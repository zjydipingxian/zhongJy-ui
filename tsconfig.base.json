{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": ["node", "vitepress", "vitepress/theme", "vitepress/client"],
    "paths": {
      "@jy-ui/*": ["packages/*"],
      "jy-ui": ["packages/jy-ui"]
    },
    "preserveSymlinks": true
  },
  "include": ["packages/**/*.ts"]
}
