{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">16",
    "pnpm": ">=7"
  },
  "description": "Vue3 Component Library with TypeScript",
  "scripts": {
    "dev": "pnpm -C play dev",
    "lint": "eslint . --fix",
    "format": "prettier --write \"**/*.{vue,ts,tsx,js,jsx,json,md}\"",
    "pub": "tsx scripts/publish.ts",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "prepare": "husky install",
    "commit": "git-cz",
    "preinstall": "npx only-allow pnpm",
    "cli": "tsx scripts/commander.ts create",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@jy-ui/components": "workspace:*",
    "@jy-ui/hooks": "workspace:*",
    "@jy-ui/theme-chalk": "workspace:*",
    "@jy-ui/utils": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/preset-typescript": "^7.23.3",
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@eslint/js": "^9.16.0",
    "@inquirer/prompts": "7.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@types/prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.6",
    "chalk": "^4.1.2",
    "commander": "12.1.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.8.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.32.0",
    "fs-extra": "^11.2.0",
    "globals": "^15.13.0",
    "husky": "^8.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.10",
    "ora": "^8.0.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.18.0",
    "vitest": "^1.3.1",
    "vue": "^3.2.47",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^1.8.27"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
